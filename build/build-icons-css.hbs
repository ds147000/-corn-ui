@font-face {
	font-family: "{{fontName}}";
	src: {{{src}}};
}


[class*=xrk-i-] {
	font-family: "{{fontName}}";
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	font-style: normal;
	font-variant: normal;
	font-weight: normal;
	/* speak: none; only necessary if not using the private unicode range (firstGlyph option) */
	text-decoration: none;
	text-transform: none;
}

{{#each codepoints}}
	.xrk-i-{{@key}}::before {
    content: "\\{{this}}";
  }
{{/each}}
