{
  "name": "@xrkmm/ui",
  "version": "0.0.9",
  "description": "向日葵妈妈移动UI库，支持H5、小程序端使用。具有自适应屏幕，主题变量化等特性",
  "main": "package-taro/dist/index.js",
  "module": "package-taro/dist/index.esm.js",
  "main:h5": "package-h5/dist/index.js",
  "module:h5": "package-h5/dist/index.esm.js",
  "private": true,
  "files": [
    "dist",
    "icons"
  ],
  "sideEffects": [],
  "scripts": {
    "dev": "concurrently \"npm run dev:weapp\" \"npm run dev:h5\"",
    "dev:weapp": "concurrently \" onchange -i \"src/**/*.tsx\" -- rollup --config ./build/rollup.config.js \" \" npm run pre:weapp \" ",
    "dev:h5": "concurrently \" onchange -i 'src/**/*.tsx' 'src/**/*.scss' -- rollup --config ./build/rollup.config.h5.js \" \" npm run pre:h5 \" ",
    "dev:doc": "concurrently \" npm run build:doc:watch \" \" npm run pre:doc \"",
    "build:all": "npm run lint && npm run test:prod && npm run build:weapp && npm run build:h5",
    "build:weapp": "cross-env NODE_ENV=production rollup --config ./build/rollup.config.js",
    "build:h5": "cross-env NODE_ENV=production rollup --config ./build/rollup.config.h5.js",
    "build:doc": "node ./build/build-docs.js",
    "build:doc:watch": "onchange -i \"src/**/*.md\" -- npm run build:doc",
    "lint": "eslint \"**/*.{js,ts,tsx}\" && npm run lint:style",
    "lint:fix": "eslint --fix \"**/*.{js,ts,tsx}\" && npm run lint:style:fix",
    "lint:style": "stylelint \"**/*.{scss, css, less}\"",
    "lint:style:fix": "stylelint --fix \"**/*.{css,less,scss}\"",
    "test": "jest --config jest.config.js --watch --coverage",
    "test:prod": "jest --config jest.config.js --silent --no-cache --coverage",
    "pre:weapp": "cd example-weapp && npm run dev:weapp",
    "pre:h5": "cd example-react && npm run start",
    "pre:doc": "cd docs && npm run start",
    "prepare": "husky install",
    "pub": "npm run build:all && node ./build/publish.js",
    "pub:doc": "npm run build:doc && cd docs && npm run build"
  },
  "keywords": [
    "向日葵妈妈，UI库，小程序，taro"
  ],
  "author": "zhoulong.yang@xrkmm.com",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-image": "^2.0.6",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-url": "^6.1.0",
    "@tarojs/components": "^3.2.10",
    "@tarojs/components-react": "^10.2.24",
    "@tarojs/taro": "^3.2.10",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "^7.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.1",
    "@types/qs": "^6.9.7",
    "@types/react": "^17.0.9",
    "@types/react-copy-to-clipboard": "^5.0.1",
    "@types/react-dom": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@vusion/webfonts-generator": "^0.7.3",
    "autoprefixer": "^10.2.6",
    "babel-plugin-transform-imports": "^2.0.0",
    "babel-preset-taro": "^3.2.10",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "eslint-config-taro": "^3.2.11",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-xrkmm": "^1.0.5",
    "fs-extra": "^10.0.0",
    "highlightjs-cypher": "^1.1.1",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "markdown-it": "^12.1.0",
    "markdown-it-highlightjs": "^3.5.0",
    "onchange": "^7.1.0",
    "ora": "^5.4.1",
    "postcss": "^8.3.1",
    "postcss-pxtransform": "^3.2.10",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.50.6",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-jscc": "^2.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-visualizer": "^5.5.0",
    "sass": "^1.37.2",
    "shelljs": "^0.8.4",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-plugin-xrkmm": "^1.0.1",
    "ts-jest": "^27.0.3",
    "tslib": "^2.3.0",
    "typescript": "^4.3.2",
    "weui": "^2.4.4"
  },
  "peerDependencies": {
    "@tarojs/components": ">=3",
    "@tarojs/components-react": ">=3",
    "@tarojs/react": ">=3",
    "qs": ">=6.8",
    "react": ">=16.13.0",
    "react-dom": ">=16.13.0"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "qs": "6.8"
  }
}
