{
  "name": "@xrkmm/ui",
  "version": "0.0.1",
  "description": "向日葵妈妈移动UI库，支持H5、小程序端使用。具有自适应屏幕，主题变量化等特性",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "main:h5": "dist-h5/index.js",
  "files": [
    "dist",
    "dist-h5"
  ],
  "scripts": {
    "dev": " rm -rf dist &&  rm -rf dist-h5 && concurrently \"npm run dev:weapp\" \"npm run dev:h5\" \"npm run dev:css\"",
    "dev:weapp": "rollup -w --config ./build/rollup.config.js",
    "dev:h5": "rollup -w --config ./build/rollup.config.h5.js",
    "dev:css": "rollup -w --config ./build/rollup.config.css.js",
    "build:all": "npm run lint && npm run test:prod &&  rm -rf dist &&  rm -rf dist-h && npm run build:weapp && npm run build:h5 && npm run build:css",
    "build:weapp": "rollup --config ./build/rollup.config.js",
    "build:h5": "rollup --config ./build/rollup.config.h5.js",
    "build:css": "rollup --config ./build/rollup.config.css.js",
    "lint": "eslint \"**/*.{js,ts,tsx}\" && npm run lint:style",
    "lint:fix": "eslint --fix \"**/*.{js,ts,tsx}\" && npm run lint:style:fix",
    "lint:style": "stylelint \"**/*.{scss, css, less}\"",
    "lint:style:fix": "stylelint --fix \"**/*.{css,less,scss}\"",
    "scan": "npm run lint && npm run test",
    "test": "jest --config jest.config.js --watch --coverage",
    "test:prod": "jest --config jest.config.js --silent --no-cache --coverage",
    "demo:weapp": "cd example && npm run dev:weapp",
    "demo:h5": "cd example-react && npm run start"
  },
  "keywords": [
    "向日葵妈妈，UI库，小程序，taro"
  ],
  "author": "zhoulong.yang@xrkmm.com",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-image": "^2.0.6",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@tarojs/components": "^3.2.10",
    "@tarojs/components-react": "^3.2.20",
    "@tarojs/taro": "^3.2.10",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "^7.0.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.1",
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "autoprefixer": "^10.2.6",
    "babel-preset-taro": "^3.2.10",
    "concurrently": "^6.2.0",
    "eslint": "^7.28.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-xrkmm": "^1.0.5",
    "jest": "^27.0.4",
    "postcss": "^8.3.1",
    "postcss-pxtransform": "^3.2.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.50.6",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-visualizer": "^5.5.0",
    "sass": "^1.34.1",
    "shelljs": "^0.8.4",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-plugin-xrkmm": "^1.0.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  },
  "peerDependencies": {
    "@tarojs/components": ">=3",
    "@tarojs/components-react": ">=3",
    "@tarojs/react": ">=3",
    "react": ">=16.13.0",
    "react-dom": ">=16.13.0"
  },
  "dependencies": {
    "classnames": "^2.3.1"
  }
}
